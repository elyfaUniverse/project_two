FROM node:18-alpine

# Установка curl для healthcheck
RUN apk add --no-cache \
    curl \
    openssl \
    python3 \
    make \
    g++

WORKDIR /app

# Копируем зависимости первыми для кэширования
COPY package*.json ./
COPY prisma ./prisma/

RUN npm install --production && \
    npx prisma generate

# Копируем остальные файлы
COPY . .

# Указываем порт
EXPOSE 5000

CMD ["sh", "-c", "npx prisma migrate deploy && node index.js"]